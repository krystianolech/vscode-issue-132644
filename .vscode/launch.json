{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha tsc",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["-r", "ts-node/register", "src/**/*.test.ts"],
      "console": "integratedTerminal",

      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
